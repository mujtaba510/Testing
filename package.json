{
  "name": "backend-api",
  "version": "1.0.0",
  "description": "Production-grade backend API with Node.js + TypeScript",
  "main": "dist/server.js",
  "types": "dist/server.d.ts",
  "scripts": {
    "dev": "ts-node-dev --respawn --transpile-only src/server.ts",
    "build": "npm install && tsc",
    "start": "node dist/server.js",
    "clean": "rimraf dist",
    "deploy:prepare": "powershell -ExecutionPolicy Bypass -File deploy.ps1"
  },
  "keywords": [
    "nodejs",
    "typescript",
    "express",
    "api"
  ],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@types/node": "^20.10.6",
    "express": "^4.18.2",
    "mongoose": "^8.0.3",
    "bcrypt": "^5.1.1",
    "jsonwebtoken": "^9.0.2",
    "nodemailer": "^6.9.7",
    "cookie-parser": "^1.4.6",
    "dotenv": "^16.3.1",
    "cors": "^2.8.5"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/bcrypt": "^5.0.2",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/nodemailer": "^6.4.14",
    "@types/cookie-parser": "^1.4.6",
    "@types/cors": "^2.8.17",
    "typescript": "^5.3.3",
    "ts-node-dev": "^2.0.0",
    "rimraf": "^5.0.5"
  }
